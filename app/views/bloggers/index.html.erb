<h1>Listing bloggers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Recipes</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bloggers.each do |blogger| %>
  <tr>
    <td><%= blogger.name %></td>
    <td><%= blogger.recipes %></td>
    <td><%= blogger.image %></td>
    <td><%= link_to 'Show', blogger %></td>
    <td><%= link_to 'Edit', edit_blogger_path(blogger) %></td>
    <td><%= link_to 'Destroy', blogger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

